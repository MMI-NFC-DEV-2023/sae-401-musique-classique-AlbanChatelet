---
interface Props {
  oeuvre: { id: string; titre: string } | null;
}

const { oeuvre } = Astro.props;
---

{
  oeuvre ? (
    <a href={`/oeuvres/${oeuvre.id}`} class="text-blue-400 hover:underline">
      {oeuvre.titre}
    </a>
  ) : (
    <span class="text-gray-400">Å’uvre inconnue</span>
  )
}
